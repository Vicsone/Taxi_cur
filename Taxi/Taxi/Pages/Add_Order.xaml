<Page x:Class="Taxi.Add_Order"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Taxi"
      mc:Ignorable="d"
      d:DesignHeight="auto" d:DesignWidth="auto"
      Title="Заказ такси">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Margin="10" FontSize="16" HorizontalAlignment="Center">Введите адреса</TextBlock>
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical">
                    <TextBlock Margin="5" FontSize="16">Откуда ехать</TextBlock>
                    <TextBlock Margin="5" FontSize="16">Куда ехать</TextBlock>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBox Style="{StaticResource DefaultTextBox}" Name="StartPositionTextBox"></TextBox>
                    <TextBox Style="{StaticResource DefaultTextBox}" Name="NextPositionTextBox"></TextBox>
                </StackPanel>
            </StackPanel>
            <Button Width="70" Height="25" Name="AddButton" Content="Заказать" Margin="10" Click="AddButton_Click"></Button>
        </StackPanel>
    </Grid>
</Page>